<% @membrerequests.each do |membrerequest| %>
    <%= membrerequest.user.email %>
    <% if membrerequest.status == 'pending' %>
        <%= link_to "Accept Member request", junior_membre_request_path(membrerequest.junior.id, membrerequest, membre_request: { status: 'approved' }), method: 'patch' %>
        <%= link_to "Reject Member request", junior_membre_request_path(membrerequest.junior.id, membrerequest, membre_request: { status: 'rejected' }), method: 'patch' %>
    <% else %>
        <%= membrerequest.status %>
    <% end %>
<% end %>