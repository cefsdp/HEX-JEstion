<div class='navbar'>
  <div class='nav_background'>
    <div class="nav_header">
      <div class='logo'> 
        <%= image_tag 'logo_hex', style: 'height:auto;width:4vw;'%> 
      </div>
      <%# Profile Selector - Membre %>
      <div class="profiles">
        <% if current_user.membre.nil? == false %>
          <div class="profile"><i class="fas fa-user"></i></div>
          <div class="profile"><i class="fas fa-user-tie"></i></div>
        <% end %>
        <%# Profile Selector - Admin %>
        <% if current_user.admin? %><div class="profile"><i class="fas fa-user-cog"></i></div><% end %>
      </div>
    </div>


    <%# Navbar - User %>
    <div class='nav_items'>
      <% if current_user.membre_request.nil? %><div class='nav_item'><%= link_to junior_membre_requests_path(current_user.junior.id, membre_request: { junior: current_user.junior_id, user: current_user.id }), method: 'post' do %><i class="fas fa-user-plus"></i><% end %></div><% end %>
      <% if current_user.membre_request.nil? == false && current_user.membre_request.status == 'pending' %><div class='nav_item'><i class="fas fa-user-clock"></i></div><% end %>
    </div>
    <%# Navbar - Membre %>
    <div class='nav_items'>
      <div class='nav_item'><%= link_to junior_path(current_user.junior_id) do %><i class="fas fa-home"></i><% end %></div>
      <div class='nav_item'><i class="fas fa-briefcase"></i></div>
      <div class='nav_item'><i class="fas fa-project-diagram"></i></div>
      <div class='nav_item'><%= link_to junior_adherents_path(current_user.junior_id) do %><i class="fas fa-users"></i><% end %></div>
      <div class='nav_item'><%= link_to junior_membres_path(current_user.junior_id) do %><i class="fas fa-user-tie"></i><% end %></div>
      <div class='nav_item'><i class="fas fa-chart-bar"></i></div>
      <div class='nav_item'><i class="fas fa-file-invoice-dollar"></i></div>
      <div class='nav_item'><i class="fas fa-question-circle"></i></div>
      <div class='nav_item'><%= link_to edit_junior_junior_configuration_path(current_user.junior_id, current_user.junior.junior_configuration.id) do %><i class="fas fa-cog"></i><% end %></div>
    </div>
    <%# Navbar - Admin %>
    <div class='nav_items'>
    </div>
    <div class="user">
        <div class='profile'><%= link_to edit_user_registration_path do %> <i class="fas fa-user-circle"></i><% end %></div>
        <div class="logout"><%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i><% end %></div>
    </div>
  </div>
</div>


